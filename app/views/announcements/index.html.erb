<%- model_class = Announcement -%>
<div class="container">
	<div class="row">
    	<div class="col-md-12">

			<div class="page-header">
		  	  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
			</div>
		</div>
  </div>
</div>

<div class="container">	
	<div class="row">
    	<div class="col-md-12">	
		<% @announcements.each do |announcement| %>
			<div class="announcement-thumbnail">
				<%= image_tag announcement.attachment.url, :class => "announcement-img" %>
				<div class="overlay">
					<h1 class="text-overlay"><%= link_to announcement.title, announcement %></h1>
				</div>
			</div>
		</br>
		<% end %>
		
		
		
		
		<%= link_to t('.new', :default => t("helpers.links.new")),
		            new_announcement_path,
		            :class => 'btn btn-primary' %>

		</div>
	</div>
</div>